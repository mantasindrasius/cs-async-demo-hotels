<Window x:Class="Hotels.Toggler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toggler" Height="300" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel>
            <CheckBox Content="Async operations" />
            <CheckBox Content="Async search between hotels" />
            <CheckBox Content="Async user action logging" />
            <CheckBox Content="Wait operations to complete" />
            <WrapPanel>
                <Label>Emulated latency (ms)</Label>
                <TextBox Name="Latency" Width="100" KeyUp="Latency_KeyUp" Text="0" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
